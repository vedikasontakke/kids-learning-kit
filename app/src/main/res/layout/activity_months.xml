<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/months_bg"
    tools:context=".tabs.secondTab.screens.MonthsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LEARNING MONTHS"
        android:gravity="center"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/black"/>


    <ViewFlipper
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="60dp"
        android:id="@+id/viewFlipper_months">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/january"
            android:src="@drawable/janevary"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/februury"
            android:src="@drawable/februvary"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/march"
            android:src="@drawable/march"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/april"
            android:src="@drawable/april"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/may"
            android:src="@drawable/may"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/june"
            android:src="@drawable/june"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/jully"
            android:src="@drawable/jully"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/auguest"
            android:src="@drawable/auguest"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/september"
            android:src="@drawable/september"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/october"
            android:src="@drawable/octomber"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/november"
            android:src="@drawable/november"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/december"
            android:src="@drawable/december"/>
    </ViewFlipper>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/left_month"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:src="@drawable/left_button" />

        <ImageView
            android:id="@+id/play_month"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:src="@drawable/button_play" />

        <ImageView
            android:id="@+id/right_month"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            android:src="@drawable/right_button" />


    </LinearLayout>


</RelativeLayout>